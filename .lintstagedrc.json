{
    "*.ts": [
        "prettier --write",
        "eslint"
    ],
    "*.js": [
        "prettier --write",
        "eslint"
    ],
    "*.vue": [
        "prettier --write",
        "eslint"
    ],
    "*.html": [
        "eslint",
        "prettier --write"
    ],
    "*.scss": [
        "prettier --write",
        "stylelint"
    ],
    "*.{ts,js,vue,html,scss}": [
        "git diff --exit-code"
    ]
}